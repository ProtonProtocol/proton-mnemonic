{
  "name": "@proton/mnemonic",
  "author": "Proton",
  "module": "dist/mnemonic.esm.js",
  "version": "0.4.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/mnemonic.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mnemonic.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "husky": "^7.0.1",
    "size-limit": "^5.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@proton/js": "^25.0.25",
    "bip32": "^2.0.6",
    "bip39": "^3.0.4",
    "hash.js": "^1.1.7"
  }
}
